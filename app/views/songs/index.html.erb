<h1>Listing songs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Movie</th>
      <th>Composer</th>
      <th>Singer</th>
      <th>Lyricist</th>
      <th>Year</th>
      <th>Language</th>
      <th>Raaga</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.movie %></td>
        <td><%= song.composer %></td>
        <td><%= song.singer %></td>
        <td><%= song.lyricist %></td>
        <td><%= song.year %></td>
        <td><%= song.language %></td>
        <td><%= song.raaga %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

